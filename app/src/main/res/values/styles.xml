<resources>
    <style name="HeadingA">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="HeadingB">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorGrayText</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HeadingC">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorGrayText</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="HeadingD">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SubTtile">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DividerViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name = "android:layout_marginTop">@dimen/spacing2x</item>
    </style>

    <style name="SectionLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PaddedSectionLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingEnd">@dimen/spacing2x</item>
        <item name="android:paddingRight">@dimen/spacing2x</item>
        <item name="android:paddingStart">@dimen/spacing2x</item>
        <item name="android:paddingLeft">@dimen/spacing2x</item>
        <item name="android:paddingTop">@dimen/spacing1x</item>
    </style>

    <style name="MatchParentLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ContainerLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SectionContraintLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="ContainerConstraintLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>